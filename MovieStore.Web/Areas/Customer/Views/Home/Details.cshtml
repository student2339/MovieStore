@model Movie

@{
    ViewData["Title"] = "Movie Details";
}

<form method="post">
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-secondary bg-gradient text-light py-4">
            <div class="row">
                <div class="col-12 text-center">
                    <h3 class="text-white text-uppercase">@Model.Title</h3>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="py-3">
                <div class="row">
                    <div class="col-6 col-md-2 offset-lg-1 pb-1">
                        <a asp-action="Index" class="btn btn-outline-primary bg-gradient mb-5 fw-semibold btn-sm text-uppercase">
                            <small>Back to home</small>
                        </a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-lg-3 offset-lg-1 text-center mb-3">
                        <img src="@Model.ImageUrl" style="width:100%" class="rounded" />
                    </div>
                    <div class="col-12 col-lg-6 offset-lg-1">
                        <div class="col-12 col-md-6 pb-4">
                            @foreach (Genre genre in Model.Genres)
                            {
                                <span class="badge bg-secondary">@genre.Name</span>
                            }
                        </div>
                        <div class="row pl-2 my-3">
                            <p class="text-dark lh-sm">@Model.Description</p>
                        </div>
                        <div class="row">
                            @foreach (Actor actor in Model.Actors)
                            {
                                <div class="col-md-3">
                                    <img src="@actor.ImageUrl" class="img-fluid" style="max-height:100px;width:auto" alt="@actor.Name">
                                    <p class="text-dark">@actor.Name</p>
                                </div>
                            }
                        </div>
                        <div class="row text-center ps-2">
                            <div class="p-1 col-3 col-lg-2 bg-white text-warning fw-bold">
                                <div>Price: @Model.Price.ToString("c")</div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 col-md-6 pb-1">
                                <button type="submit" disabled
                                        class="btn btn-primary bg-gradient w-100 py-2 text-uppercase fw-semibold">
                                    Add to Cart
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>