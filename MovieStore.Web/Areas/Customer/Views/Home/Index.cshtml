@model IEnumerable<Movie>

@{
	ViewData["Title"] = "Home Page";
}

<div class="row pb-3">
	@foreach (Movie movie in Model)
	{
		<div class="col-lg-3 col-sm-6">
			<div class="row p-2">
				<div class="col-12 p-1">
					<div class="card border-0 p-3 shadow border-top border-5 rounded">
						<img src="@movie.ImageUrl" class="card-img-top rounded" />
						<div class="card-body pb-2">
							<div class="pl-1">
								<p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@movie.Title</p>
							</div>
							<div class="pl-1">
								<p class="card-title text-dark opacity-75 text-center mb-0">
									<i class="text-warning">Price: @movie.Price.ToString("c")</i>
								</p>
							</div>
						</div>
						<div>
							<a asp-action="Details" asp-route-id="@movie.Id" class="btn btn-primary bg-gradient border-0 form-control">
								Details
							</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	}
</div>